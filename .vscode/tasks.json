{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format (ruff)",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "format", "."],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Test (pytest)",
      "type": "shell",
      "command": "uv",
      "args": ["run", "pytest", "-q"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": []
    }
  ]
}
